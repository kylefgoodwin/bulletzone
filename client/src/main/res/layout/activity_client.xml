<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95C462"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".ClientActivity">

    <!-- Left Panel: Display -->
    <LinearLayout
        android:id="@+id/LinearLayoutDisplay"
        android:layout_width="509dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- User Info -->
        <TextView
            android:id="@+id/userIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User ID: Not logged in"
            android:textSize="18sp" />

        <!-- Balance Display -->
        <TextView
            android:id="@+id/balanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Balance: $0.00"
            android:textSize="16sp" />

        <!-- Power-up and Stats Section -->
        <LinearLayout
            android:id="@+id/powerUpStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#F5F5F5"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Vehicle Stats Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Vehicle Stats"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movementSpeedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movement Speed: 500ms"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/fireRateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Fire Rate: 1500ms"
                android:textColor="#000000" />

            <!-- Power-ups Section -->
            <TextView
                android:id="@+id/powerUpLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Active Power-ups:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activeEffects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textColor="#4CAF50" />

            <TextView
                android:id="@+id/itemInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#2196F3"
                android:textStyle="italic" />

            <!-- Shield and Repair Kit Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <!-- Shield Health Bar -->
                <com.skydoves.progressview.ProgressView
                    android:id="@+id/shieldHealthBar"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    app:progressView_colorBackground="@color/blue"
                    app:progressView_colorProgress="@color/light_blue"
                    app:progressView_labelColorInner="@color/black"
                    app:progressView_labelColorOuter="@color/blue"
                    app:progressView_labelSize="16sp"
                    app:progressView_labelSpace="10dp"
                    app:progressView_labelText="Shield: 50/50"
                    app:progressView_labelTypeface="bold"
                    app:progressView_max="50"
                    app:progressView_padding="1dp"
                    app:progressView_progress="50"
                    app:progressView_progressFromPrevious="true"
                    app:progressView_radius="12dp" />

                <!-- Repair Kit Status -->
                <TextView
                    android:id="@+id/repairKitStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Repair Kit: Not Active"
                    android:textColor="#FF9800"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/repairKitTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Remaining: --:--"
                    android:textColor="#FF9800"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!-- GridView for the game board -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridView
                android:id="@+id/tGridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:numColumns="16"
                tools:listitem="@layout/field_item" />

            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:numColumns="16"
                tools:listitem="@layout/field_item" />

        </FrameLayout>
    </LinearLayout>

    <!-- Right Panel: Controls -->
    <LinearLayout
        android:id="@+id/LinearLayoutControl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login" />

            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Logout" />

            <Button
                android:id="@+id/buttonLeave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Leave" />
        </LinearLayout>

        <!-- Health Bars -->
        <com.skydoves.progressview.ProgressView
            android:id="@+id/tankHealthBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:progressView_colorBackground="@color/green"
            app:progressView_colorProgress="@color/red"
            app:progressView_labelColorInner="@color/black"
            app:progressView_labelColorOuter="@color/red"
            app:progressView_labelSize="16sp"
            app:progressView_labelSpace="10dp"
            app:progressView_labelText="Tank Health: 100/100"
            app:progressView_labelTypeface="bold"
            app:progressView_max="100"
            app:progressView_padding="1dp"
            app:progressView_progress="100"
            app:progressView_progressFromPrevious="true"
            app:progressView_radius="12dp" />

        <com.skydoves.progressview.ProgressView
            android:id="@+id/builderHealthBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:progressView_colorBackground="@color/green"
            app:progressView_colorProgress="@color/red"
            app:progressView_labelColorInner="@color/black"
            app:progressView_labelColorOuter="@color/red"
            app:progressView_labelSize="16sp"
            app:progressView_labelSpace="10dp"
            app:progressView_labelText="Builder Health: 80/80"
            app:progressView_labelTypeface="bold"
            app:progressView_max="80"
            app:progressView_padding="1dp"
            app:progressView_progress="80"
            app:progressView_progressFromPrevious="true"
            app:progressView_radius="12dp" />

        <com.skydoves.progressview.ProgressView
            android:id="@+id/soldierHealthBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:progressView_colorBackground="@color/green"
            app:progressView_colorProgress="@color/red"
            app:progressView_labelColorInner="@color/black"
            app:progressView_labelColorOuter="@color/red"
            app:progressView_labelSize="16sp"
            app:progressView_labelSpace="10dp"
            app:progressView_labelText="Soldier Health: 25/25"
            app:progressView_labelTypeface="bold"
            app:progressView_max="25"
            app:progressView_padding="1dp"
            app:progressView_progress="25"
            app:progressView_progressFromPrevious="true"
            app:progressView_radius="12dp" />

        <!-- Status Messages -->
        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:textColor="#FF0000" />

        <TextView
            android:id="@+id/eventBusStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:textColor="#FF0000" />

        <Spinner
            android:id="@+id/selectPlayable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/selectImprovement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonEject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Eject Power-up" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/up" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/left" />

                <Button
                    android:id="@+id/buttonDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/down" />

                <Button
                    android:id="@+id/buttonRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/right" />
            </LinearLayout>

        </LinearLayout>

        <!-- Toggle Button for Units -->
        <Button
            android:id="@+id/buttonEjectSoldier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ejectsoldier" />

        <!-- Build or Dismantle Button -->
        <Button
            android:id="@+id/buttonBuild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/build" />

        <!-- Build or Dismantle Button -->
        <Button
            android:id="@+id/buttonDismantle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/dismantle" />

        <!-- Fire Button -->
        <Button
            android:id="@+id/buttonFire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="FIRE" />

        <Button
            android:id="@+id/buttonSellPowerUps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Sell Power-ups" />

    </LinearLayout>
</LinearLayout>